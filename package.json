{
  "name": "gregorio-lsp",
  "version": "0.1.0",
  "description": "Language Server Protocol implementation for Gregorio GABC/NABC notation with semantic analysis",
  "main": "./out/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AISCGre-BR/gregorio-lsp.git"
  },
  "author": "AISCGre-BR",
  "license": "MIT",
  "keywords": [
    "lsp",
    "language-server",
    "gregorio",
    "gabc",
    "nabc",
    "gregorian-chant",
    "tree-sitter"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "clean": "rimraf out",
    "precompile": "npm run clean",
    "dev": "npm run compile && node ./out/server.js --stdio",
    "package": "npm run compile && npm pack"
  },
  "dependencies": {
    "tree-sitter": "^0.21.1",
    "tree-sitter-gregorio": "file:../tree-sitter-gregorio",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
