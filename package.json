{
  "name": "gregorio-lsp",
  "version": "0.1.0",
  "description": "Language Server Protocol implementation for Gregorio GABC/NABC notation files",
  "main": "dist/server.js",
  "bin": {
    "gregorio-lsp": "dist/server.js"
  },
  "exports": {
    ".": "./dist/server.js",
    "./lint": "./dist/lint.js"
  },
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "lsp",
    "language-server",
    "gabc",
    "nabc",
    "gregorio",
    "gregorian-chant"
  ],
  "author": "AISC Gre-BR",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "gregolint": "file:../gregolint",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "optionalDependencies": {
    "tree-sitter": "^0.21.0",
    "tree-sitter-gregorio": "file:../tree-sitter-gregorio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}
